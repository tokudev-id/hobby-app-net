@page
@model HobbyApp.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users"></i> Users Management</h2>
        <div>
            <a asp-page="/Users/Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New User
            </a>
            <a asp-page="/Account/Login" class="btn btn-outline-primary ms-2">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="Search" class="form-label">Search</label>
                    <input type="text" class="form-control" id="Search" name="search"
                           value="@Model.Search" placeholder="Search by name, username, or email..." />
                </div>
                <div class="col-md-2">
                    <label for="PageSize" class="form-label">Items per page</label>
                    <select class="form-select" id="PageSize" name="size">
                        <option value="5" selected="@(Model.Size == 5)">5</option>
                        <option value="10" selected="@(Model.Size == 10)">10</option>
                        <option value="20" selected="@(Model.Size == 20)">20</option>
                        <option value="50" selected="@(Model.Size == 50)">50</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-search"></i> Search
                    </button>
                    <a href="/Users" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Clear
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Users List (@Model.TotalCount total)</h5>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Username</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Hobbies Count</th>
                                <th>Created Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Username</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td>
                                        <span class="badge bg-info">@user.HobbyCount</span>
                                    </td>
                                    <td>@user.CreatedAt.ToShortDateString()</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-page="/Users/Details" asp-route-id="@user.Id"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-page="/Users/Edit" asp-route-id="@user.Id"
                                               class="btn btn-outline-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button class="btn btn-outline-danger"
                                                    onclick="confirmDelete(@user.Id, '@user.FullName')"
                                                    title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Users pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.Page - 1)&size=@Model.Size&search=@Model.Search">
                                        <i class="fas fa-chevron-left"></i> Previous
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" href="?page=@i&size=@Model.Size&search=@Model.Search">@i</a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.Page + 1)&size=@Model.Size&search=@Model.Search">
                                        Next <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No users found</h4>
                    <p class="text-muted">
                        @(string.IsNullOrEmpty(Model.Search) ? "There are no users in the system yet." : "No users match your search criteria.")
                    </p>
                    @if (!string.IsNullOrEmpty(Model.Search))
                    {
                        <a href="/Users" class="btn btn-primary">Show All Users</a>
                    }
                    else
                    {
                        <a asp-page="/Users/Create" class="btn btn-success">Add First User</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(userId, userName) {
            if (confirm(`Are you sure you want to delete user "${userName}"? This action cannot be undone.`)) {
                deleteUser(userId);
            }
        }

        async function deleteUser(userId) {
            try {
                const token = '@HttpContext.Session.GetString("JWTToken")';
                const response = await fetch(`/api/users/${userId}`, {
                    method: 'DELETE',
                    headers: {
                        'Authorization': `Bearer ${token}`,
                        'Content-Type': 'application/json'
                    }
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to delete user. Please try again.');
                }
            } catch (error) {
                alert('An error occurred while deleting the user.');
            }
        }
    </script>
}

