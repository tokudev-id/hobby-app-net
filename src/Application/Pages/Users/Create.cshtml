@page
@model HobbyApp.Pages.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-plus"></i> Create New User</h2>
        <a asp-page="/Users/Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>User Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
                                </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                                <div class="alert alert-success" role="alert">
                                    <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                                </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Username" class="form-label">
                                    <i class="fas fa-user"></i> Username *
                                </label>
                                <input type="text" class="form-control" id="Username" name="Username"
                                       value="@Model.Username" required maxlength="50" />
                                <div class="form-text">Choose a unique username</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="FullName" class="form-label">
                                    <i class="fas fa-id-card"></i> Full Name *
                                </label>
                                <input type="text" class="form-control" id="FullName" name="FullName"
                                       value="@Model.FullName" required maxlength="100" />
                                <div class="form-text">Enter the user's full name</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">
                                    <i class="fas fa-envelope"></i> Email *
                                </label>
                                <input type="email" class="form-control" id="Email" name="Email"
                                       value="@Model.Email" required maxlength="255" />
                                <div class="form-text">Enter a valid email address</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="Password" class="form-label">
                                    <i class="fas fa-lock"></i> Password *
                                </label>
                                <input type="password" class="form-control" id="Password" name="Password"
                                       required maxlength="100" minlength="6" />
                                <div class="form-text">Minimum 6 characters</div>
                            </div>
                        </div>

                        <!-- Hobbies Section -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-gamepad"></i> Hobbies (Optional)
                            </label>
                            <div id="hobbiesContainer">
                                <!-- Hobby entries will be added here -->
                            </div>
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="addHobby()">
                                <i class="fas fa-plus"></i> Add Hobby
                            </button>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/Users/Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            let hobbyCount = 0;

            function addHobby() {
                hobbyCount++;
                const container = document.getElementById('hobbiesContainer');

                const hobbyDiv = document.createElement('div');
                hobbyDiv.className = 'row mb-2 align-items-end';
                hobbyDiv.id = `hobby-${hobbyCount}`;

                hobbyDiv.innerHTML = `
                    <div class="col-md-6">
                        <label class="form-label">Hobby Name</label>
                        <input type="text" class="form-control" name="Hobbies[${hobbyCount - 1}].Name" required maxlength="100" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Level</label>
                        <select class="form-select" name="Hobbies[${hobbyCount - 1}].Level">
                            <option value="1">Beginner</option>
                            <option value="2">Intermediate</option>
                            <option value="3">Expert</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeHobby(${hobbyCount})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;

                container.appendChild(hobbyDiv);
            }

            function removeHobby(id) {
                const hobbyDiv = document.getElementById(`hobby-${id}`);
                if (hobbyDiv) {
                    hobbyDiv.remove();
                }
            }

            // Add first hobby by default
            document.addEventListener('DOMContentLoaded', function() {
                addHobby();
            });
        </script>
}
