@page "{id}"
@model HobbyApp.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user-edit"></i> Edit User</h2>
        <div>
            <a asp-page="/Users/Details" asp-route-id="@Model.UserId" class="btn btn-info">
                <i class="fas fa-eye"></i> View Details
            </a>
            <a asp-page="/Users/Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i>Edit User Information</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-triangle"></i> @Model.ErrorMessage
                                </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                        {
                                <div class="alert alert-success" role="alert">
                                    <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                                </div>
                        }

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="Username" class="form-label">
                                    <i class="fas fa-user"></i> Username *
                                </label>
                                <input type="text" class="form-control" id="Username" name="Username"
                                       value="@Model.Username" required maxlength="50" />
                                <div class="form-text">Choose a unique username</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="FullName" class="form-label">
                                    <i class="fas fa-id-card"></i> Full Name *
                                </label>
                                <input type="text" class="form-control" id="FullName" name="FullName"
                                       value="@Model.FullName" required maxlength="100" />
                                <div class="form-text">Enter the user's full name</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email *
                            </label>
                            <input type="email" class="form-control" id="Email" name="Email"
                                   value="@Model.Email" required maxlength="255" />
                            <div class="form-text">Enter a valid email address</div>
                        </div>

                        <!-- Hobbies Section -->
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-gamepad"></i> Hobbies
                            </label>
                            <div id="hobbiesContainer">
                                <!-- Hobby entries will be loaded here -->
                            </div>
                            <button type="button" class="btn btn-outline-primary btn-sm" onclick="addHobby()">
                                <i class="fas fa-plus"></i> Add Hobby
                            </button>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="/Users/Details" asp-route-id="@Model.UserId" class="btn btn-info me-md-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-page="/Users/Index" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            let hobbyCount = 0;

            function addHobby(name = '', level = 1) {
                hobbyCount++;
                const container = document.getElementById('hobbiesContainer');

                const hobbyDiv = document.createElement('div');
                hobbyDiv.className = 'row mb-2 align-items-end';
                hobbyDiv.id = `hobby-${hobbyCount}`;

                hobbyDiv.innerHTML = `
                    <div class="col-md-6">
                        <label class="form-label">Hobby Name</label>
                        <input type="text" class="form-control" name="Hobbies[${hobbyCount - 1}].Name" value="${name}" required maxlength="100" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Level</label>
                        <select class="form-select" name="Hobbies[${hobbyCount - 1}].Level">
                            <option value="1" ${level == 1 ? 'selected' : ''}>Beginner</option>
                            <option value="2" ${level == 2 ? 'selected' : ''}>Intermediate</option>
                            <option value="3" ${level == 3 ? 'selected' : ''}>Expert</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeHobby(${hobbyCount})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;

                container.appendChild(hobbyDiv);
            }

            function removeHobby(id) {
                const hobbyDiv = document.getElementById(`hobby-${id}`);
                if (hobbyDiv) {
                    hobbyDiv.remove();
                }
            }

            // Load existing hobbies on page load
            document.addEventListener('DOMContentLoaded', function() {
        @if (Model.Hobbies != null && Model.Hobbies.Any())
        {
            foreach (var hobby in Model.Hobbies)
            {
                <text>
                                addHobby('@hobby.Name', @((int)hobby.Level));
                </text>
            }
        }
        else
        {
            <text>
                        addHobby();
            </text>
        }
            });
        </script>
}
